<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_vertical">

        <!-- Environment Selector Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:strokeColor="@color/grey_border"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_settings"
                        android:tint="@android:color/holo_blue_dark"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Environment"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSwitchEnvironment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Switch"
                        android:textSize="12sp"
                        android:textAllCaps="false"
                        app:backgroundTint="@android:color/holo_blue_dark"
                        android:textColor="@android:color/white" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:background="@drawable/environment_info_background">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="4dp">

                        <TextView
                            android:id="@+id/tvEnvironmentBadge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Production"
                            android:textColor="@android:color/white"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="4dp"
                            android:background="@drawable/badge_background" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvEnvironmentEndpoint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="https://api.go-mailer.com/v1"
                        android:textSize="12sp"
                        android:fontFamily="monospace"
                        android:textColor="@android:color/darker_gray"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvEnvironmentDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Live production environment"
                        android:textSize="12sp"
                        android:textColor="@android:color/darker_gray" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter your email:"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="user@example.com">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:text="nathan@go-mailer.com" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Main Action Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnTestCompleteFlow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="🚀 Test Complete Flow (Recommended)"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:paddingVertical="16dp"
            app:backgroundTint="@color/green"
            android:textColor="@android:color/white" />

        <!-- Section Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Or test step by step:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Step by Step Buttons -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSendUserData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="1️⃣ Send User Data to Backend"
            android:textSize="14sp"
            android:textAllCaps="false"
            app:backgroundTint="@color/blue"
            android:textColor="@android:color/white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRequestPermission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="2️⃣ Request Notification Permission"
            android:textSize="14sp"
            android:textAllCaps="false"
            app:backgroundTint="@color/orange"
            android:textColor="@android:color/white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnTrackEvents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:text="3️⃣ Setup Notification Click Tracking"
            android:textSize="14sp"
            android:textAllCaps="false"
            app:backgroundTint="@color/purple"
            android:textColor="@android:color/white" />

        <!-- Status Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:strokeColor="@color/grey_border"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status:"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvUserStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="User Data: ❌ Not Sent"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvNotificationStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Notifications: ❌ Not Requested"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvEventStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Click Tracking: ❌ Not Ready"
                    android:textSize="14sp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- SDK Status -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GoMailer SDK Initialized!"
            android:textStyle="bold"
            android:textColor="@color/green"
            android:gravity="center"
            android:textSize="16sp" />

    </LinearLayout>

</ScrollView>