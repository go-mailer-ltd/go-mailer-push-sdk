import 'package:flutter/material.dart';
import 'package:go_mailer/go_mailer.dart';
import 'dart:math';

void main() async {
  WidgetsFlutterBinding.ensureInitialized();
  
  const apiKey = 'TmF0aGFuLTExNjYwNDA4NjY2NjcuNTc0Mi0x';
  print('üöÄ Initializing GoMailer SDK with API key: ${apiKey.substring(0, 10)}...');
  
  try {
    await GoMailer.initialize(
      apiKey: apiKey,
      config: GoMailerConfig(
