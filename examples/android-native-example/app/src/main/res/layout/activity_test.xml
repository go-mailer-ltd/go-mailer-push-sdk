<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".TestActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Top Spacing -->
        <View
            android:layout_width="match_parent"
            android:layout_height="48dp" />

        <!-- Logo/Icon -->
        <ImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"
            android:src="@drawable/ic_notification"
            app:tint="@color/primary" />

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test Notifications"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/on_background"
            android:gravity="center"
            android:layout_marginBottom="32dp" />

        <!-- Current Configuration Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/surface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_info"
                        app:tint="@color/primary"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Current Configuration"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/on_surface" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider"
                    android:layout_marginBottom="16dp" />

                <!-- API Key -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_key"
                        app:tint="@color/secondary"
                        android:layout_marginEnd="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="API Key"
                            android:textSize="12sp"
                            android:textColor="@color/secondary" />

                        <TextView
                            android:id="@+id/apiKeyValue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Loading..."
                            android:textSize="14sp"
                            android:textColor="@color/on_surface"
                            android:fontFamily="monospace"
                            android:ellipsize="end"
                            android:maxLines="1" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Environment -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_cloud"
                        app:tint="@color/secondary"
                        android:layout_marginEnd="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Environment"
                            android:textSize="12sp"
                            android:textColor="@color/secondary" />

                        <TextView
                            android:id="@+id/environmentValue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Loading..."
                            android:textSize="14sp"
                            android:textColor="@color/on_surface" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Device Token (initially hidden) -->
                <LinearLayout
                    android:id="@+id/deviceTokenCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_phone"
                        app:tint="@color/secondary"
                        android:layout_marginEnd="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Device Token"
                            android:textSize="12sp"
                            android:textColor="@color/secondary" />

                        <TextView
                            android:id="@+id/deviceTokenValue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="14sp"
                            android:textColor="@color/on_surface"
                            android:fontFamily="monospace"
                            android:ellipsize="end"
                            android:maxLines="1" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Email Input Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/surface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Recipient Details"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/on_surface"
                    android:layout_marginBottom="16dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/emailInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email Address"
                    app:startIconDrawable="@drawable/ic_email"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/emailInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Loading Progress Bar -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="32dp"
            android:visibility="gone" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/sendTestButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Send Test Notification"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                app:backgroundTint="@color/primary"
                app:cornerRadius="12dp"
                app:icon="@drawable/ic_send"
                app:iconGravity="start"
                app:elevation="2dp"
                android:layout_marginBottom="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/changeEnvironmentButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Change Environment"
                android:textSize="16sp"
                android:textColor="@color/primary"
                style="@style/Widget.Material3.Button.OutlinedButton"
                app:cornerRadius="12dp"
                app:icon="@drawable/ic_settings"
                app:iconGravity="start"
                app:strokeColor="@color/primary" />

        </LinearLayout>

        <!-- Success Message Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/successCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:visibility="gone"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/success_container">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_check_circle"
                    app:tint="@color/success"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:id="@+id/successMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/success"
                    android:textStyle="bold" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Error Message Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/errorCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:visibility="gone"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/error_container">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_error"
                    app:tint="@color/error"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:id="@+id/errorMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/error" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Logs Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Activity Logs"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/on_background" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/clearLogsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clear"
                style="@style/Widget.Material3.Button.TextButton"
                app:backgroundTint="@color/error" />

        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/surface">

            <TextView
                android:id="@+id/logsText"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:text=""
                android:textSize="11sp"
                android:fontFamily="monospace"
                android:textColor="@color/on_surface"
                android:padding="12dp"
                android:scrollbars="vertical"
                android:gravity="top" />

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>